<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".dangky">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginTop="10dp"
        android:textSize="55sp"
        android:textColor="#FF5722"
        android:layout_margin="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtemail_K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#A84E4E"
        android:hint="username : "
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/txtmatkhau_K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#A84E4E"
        android:hint="Mat Khau : "
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/txthoten_K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#A84E4E"
        android:hint="Ho ten : "
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/txtsdt_K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#A84E4E"
        android:hint="So dien thoai : "
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/txtdiachinha_K"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#A84E4E"
        android:hint="Dia chi nha : "
        android:textColor="@color/black"
        android:padding="15dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnsingup_K"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Ky"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dang nhap"
        android:id="@+id/dangnhap"/>
</LinearLayout>